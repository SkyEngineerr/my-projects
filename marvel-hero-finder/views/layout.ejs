        #comicCards {
            background: white;
            background-clip: content-box;
        }

        #comicCards a:link, 
        a:visited {
            text-decoration: none;
            display: inline-block;
            transition: all 0.2s;
        }

        #comicCards a:hover,
        a:active {
            color: white;
            box-shadow: 0 1rem 2rem rgba(black, .4);
            transform: rotate(5deg) scale(1.2);
            padding: 2px;
            /* -webkit-transform: rotate(5deg) scale(1.3); */
        }

        #head_img:hover{
        transform: rotate(180deg) 
        }

      


    </style>
    
